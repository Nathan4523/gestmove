@model Gestmove.Models.tb_manutencao

@{
    ViewBag.Title = "Create";
}

@*Breadcrumb*@
<ol class="breadcrumb">
    <li class="breadcrumb-item">Home</li>
    <li class="breadcrumb-item">Novo</li>
    <li class="breadcrumb-item active">Manutenção</li>
</ol>

<section class="container-manutencoes">
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-12">
                            <h2>Cadastrar uma manutenção</h2>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-row">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group col-12 mt-4">
                                <div class="d-flex flex-column flex-md-row justify-content-center">
                                    <div class="item-bloco col">
                                        <label>Veículo <sup class="text-danger">*</sup></label>
                                        @Html.DropDownList("cod_veiculo", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.cod_veiculo, "", new { @class = "text-danger" })
                                    </div>

                                    @*<div class="item-bloco col">
                                            <label>Oficina <sup class="text-danger">*</sup></label>
                                            @Html.DropDownList("cod_oficina", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.cod_oficina, "", new { @class = "text-danger" })
                                        </div>*@

                                    <div class="item-bloco col">
                                        <label>Tipo de manutenção <sup class="text-danger">*</sup></label>
                                        @Html.EditorFor(model => model.tipo, new { htmlAttributes = new { @class = "form-control", id = "tipo_manutencao" } })
                                        @Html.ValidationMessageFor(model => model.tipo, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="item-bloco col">
                                        <label>Motivo da manutenção <sup class="text-danger">*</sup></label>
                                        @Html.EditorFor(model => model.motivo, new { htmlAttributes = new { @class = "form-control", id = "motivo_manutencao" } })
                                        @Html.ValidationMessageFor(model => model.motivo, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="item-bloco col">
                                        <label>Data da manutenção <sup class="text-danger">*</sup></label>
                                        @Html.EditorFor(model => model.data, new { htmlAttributes = new { @class = "form-control", id = "data_manutencao" } })
                                        @Html.ValidationMessageFor(model => model.data, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="item-bloco col">
                                        <label>Valor da manutenção <sup class="text-danger">*</sup></label>
                                        @Html.EditorFor(model => model.valor, new { htmlAttributes = new { @class = "form-control", id = "valor_manutencao" } })
                                        @Html.ValidationMessageFor(model => model.valor, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group col-12">
                                <div class="d-flex flex-column flex-md-row justify-content-between">
                                    <div class="item-bloco pr-3">
                                        <a href="/Manutencoes" class="btn btn-default bg-danger"><i class="fas fa-times mr-3"></i> Cancelar</a>

                                    </div>
                                    <div class="item-bloco pr-3">
                                        <button type="submit" class="btn btn-default"><i class="far fa-save mr-3"></i> Salvar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
